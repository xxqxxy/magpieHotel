<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

   <!-- <com.innouni.magpie.main.widget.TranslucentScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pullzoom_scrollview"
        android:scrollbars="none">-->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/lay_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <android.support.v4.view.ViewPager
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:id="@+id/vp_map"
                    ></android.support.v4.view.ViewPager>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="25dp"
                    android:text="酒店预订"
                    android:textColor="@color/cr_black_2"
                    android:textSize="18sp"
                    android:layout_marginBottom="20dp"
                    android:drawableLeft="@mipmap/icon_home_zhuzi_bg"
                    android:drawablePadding="8dp"
                    />

                <!--选择目的地-->

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginBottom="10dp"
                    android:paddingBottom="12dp"
                    android:paddingTop="12dp"
                    android:paddingLeft="14dp"
                    android:paddingRight="18dp"
                    android:background="@drawable/ic_shape_green_bg">

                    <TextView
                        android:id="@+id/tv_destination"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="选择目的地"
                        android:textColor="@color/cr_green_3"
                        android:textSize="16sp"
                        android:drawableLeft="@mipmap/icon_home_address"
                        android:drawablePadding="16dp"

                        />


                    <ImageView
                        android:layout_width="1dp"
                        android:layout_height="22dp"
                        android:background="@color/cr_green_1"
                        android:layout_toLeftOf="@+id/iv_near_bg"
                        android:layout_marginRight="5dp"/>


                    <ImageView
                        android:id="@+id/iv_near_bg"
                        android:layout_toLeftOf="@+id/pb_bar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_home_distact"
                        android:layout_marginRight="7dp"/>

                    <ProgressBar
                        android:visibility="gone"
                       android:layout_centerVertical="true"
                        android:layout_marginRight="7dp"
                        android:layout_toLeftOf="@+id/tv_my_near"
                        android:id="@+id/pb_bar"
                        style="?android:attr/progressBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tv_my_near"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="我的附近"
                        android:textSize="16sp"
                        android:textColor="@color/cr_green_3"
                        />

                </RelativeLayout>

                <!--入住时间-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginBottom="15dp"
                    android:paddingBottom="12dp"
                    android:paddingTop="12dp"
                    android:paddingLeft="14dp"
                    android:paddingRight="18dp"
                    android:background="@drawable/ic_shape_green_bg">

                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="选择住宿时间"
                        android:textColor="@color/cr_green_3"
                        android:textSize="16sp"
                        android:drawableLeft="@mipmap/icon_date"
                        android:drawablePadding="16dp"

                        />

                </RelativeLayout>

            <!--开始搜索-->
                <TextView
                    android:id="@+id/tv_search"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="47dp"
                    android:paddingRight="47dp"
                    android:textSize="18sp"
                    android:textColor="@color/cr_white"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:layout_marginBottom="26dp"
                    android:text="开始搜索"
                    android:background="@drawable/ic_shape_cricle_green_bg"
                    />

                <!--活动特价-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text="活动特价"
                    android:textSize="18sp"
                    android:textColor="@color/cr_black_2"
                    android:layout_marginBottom="20dp"
                    android:drawableLeft="@mipmap/icon_home_zhuzi_bg"
                    android:drawablePadding="8dp"
                    />


            `   <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rv_act"
                android:scrollbars="none">
            </android.support.v7.widget.RecyclerView>





                <!--优质房源-->

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="27dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="优质房源"
                        android:textSize="18sp"
                        android:textColor="@color/cr_black_2"
                        android:drawableLeft="@mipmap/icon_home_zhuzi_bg"
                        android:drawablePadding="8dp"

                        />
                    <ImageView
                        android:id="@+id/iv_house_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_gray_right"
                        android:layout_alignParentRight="true"/>


                </RelativeLayout>


                <com.comutils.main.MyListView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    android:id="@+id/lv_house"
                    android:listSelector="@android:color/transparent"
                    />



            </LinearLayout>


        </LinearLayout>


