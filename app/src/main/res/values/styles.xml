<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/cr_green_1</item>
        <item name="colorAccent">@color/cr_green_1</item>
    </style>

    <style name="FeelyouWindowAnimTheme" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/in_from_right</item>
        <item name="android:activityOpenExitAnimation">@anim/out_from_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/in_from_left</item>
        <item name="android:activityCloseExitAnimation">@anim/out_from_right</item>
    </style>
    <style name="iLauncherTheme" parent="Theme.AppCompat.Light.DarkActionBar" >
        <item name="android:windowBackground">@color/cr_white</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimaryDark">@color/cr_white</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/FeelyouWindowAnimTheme</item>
        <item name="android:typeface">monospace</item>
    </style>


    <style name="TranslucentTheme" parent="@style/Theme.AppCompat.Light.NoActionBar"></style>

    <style name="text_white">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="text_black">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black_dft</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="horizontal_divider">
        <item name="android:layout_height">0.8dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/dividing_dark</item>
    </style>

    <style name="horizontal_divider_light">
        <item name="android:layout_height">0.8dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/dividing_light</item>
    </style>

    <style name="vertical_divider">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0.8dp</item>
        <item name="android:background">@color/dividing_dark</item>
    </style>

    <style name="vertical_divider_light">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0.8dp</item>
        <item name="android:background">@color/dividing_light</item>
    </style>


</resources>
